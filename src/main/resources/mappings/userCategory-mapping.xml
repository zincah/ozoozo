<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="UserCategoryDAO">
    
    
    <select id="m_category" resultType="ucate" >
    SELECT * FROM CATEGORY ORDER BY CATE_CODE ASC
    
    </select>
    
    <select id="s_category" resultType="ucate">
    SELECT * FROM SUB_CATEGORY WHERE TOP_CATECODE = #{TOP_CATECODE} ;
    </select>
    
    <select id="b_category" resultType="ucate">
    
    SELECT * FROM SUB_CATEGORY WHERE TOP_CATECODE = 1 and SUB_DEPTH = 2 and SUBCATE_CODE/100 = 100;
    </select>
    
    
 </mapper>