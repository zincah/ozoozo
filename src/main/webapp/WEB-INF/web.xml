<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee; http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<!-- controller 등록 -->
	<!-- 사용자 -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				<!-- 각자 만들 context.xml 등록 -->
				WEB-INF/config/user-management.xml
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.com</url-pattern>
	</servlet-mapping>

	<!-- 판매자 -->
	<servlet>
		<servlet-name>action1</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				WEB-INF/config/seller-management.xml
				<!-- 각자 만들 context.xml 등록 -->
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>action1</servlet-name>
		<url-pattern>*.seller</url-pattern>
	</servlet-mapping>

	<!-- 관리자 -->
	<servlet>
		<servlet-name>action2</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				WEB-INF/config/admin-management.xml
				classpath:security-config.xml
				<!-- 각자 만들 context.xml 등록 -->
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>action2</servlet-name>
		<url-pattern>*.admin</url-pattern>
	</servlet-mapping>



	<!-- utf-8 encoding -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
